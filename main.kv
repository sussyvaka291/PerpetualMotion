<MainScreen>:
    name: 'main'
    staircaseSpeed: staircaseSpeed
    rampSpeed: rampSpeed
    gate: gate
    ramp: ramp
    staircase: staircase
    FloatLayout:
        size_hint: None, None



	##################
	##### BUTTONS ####
        ##################

        # Quit button
        Button:
            text: 'X'
            font_size: 23
            size_hint: None, None
            size: root.width * 0.015, root.width * 0.015
            x: root.width * 0.965
            y: root.height * 0.945
            background_color: 0.7, 0.7, 0.7, 1
            on_release: root.quit()

        DPEAButton:  
            id: auto
            color: 168/255, 19/255, 68/255, 1
            text: "Start"
            center_x: root.width * 0.5
            y: root.height * 0.55
            background_color: 1, 0, 0, 0
            background_normal: ''
            size_hint: None,None
            size: 300,100
            on_press: root.threadauto()


        # Turn on/off gate
        DPEAButton:
            id: gate
            color: 0/255, 153/255, 153/255, 1
            text: "Open Gate"
            center_x: root.width * 0.25
            y: root.height * 0.35
            background_color: 0, 0, 0, 0
            background_normal: ''
            size_hint: None,None
            size: 300,100
            on_press: root.toggleGate()


        DPEAButton:
            id: ramp
            color: 0/255, 153/255, 153/255, 1
            text: "Ramp to Top"
            center_x: root.width * 0.5
            y: root.height * 0.35
            background_color: 0, 0, 0, 0
            background_normal: ''
            size_hint: None,None
            size: 300,100
            on_press: root.threadtoggleRamp()


        DPEAButton:
            id: staircase
            color: 0/255, 153/255, 153/255, 1
            text: "Staircase On"
            center_x: root.width * 0.75
            y: root.height * 0.35
            background_color: 0, 0, 0, 0
            background_normal: ''
            size_hint: None,None
            size: 300,100
            on_press: root.toggleStaircase()

	##################
	##### SLIDERS ####
        ##################

        Slider:
            id: rampSpeed
            orientation: 'horizontal'
            min: 1
            max: 6
            value: 1
            step: 1
            center_x: root.width * 0.6
            y: root.height * 0.15
            size_hint_x: 7
            on_value: root.setrampSpeed(self.value)

        Slider:
            id: staircaseSpeed
            orientation: 'horizontal'
            min: 1
            max: 6
            value: 1
            step: 1
            center_x: root.width * 0.6
            y: root.height * 0.05
            size_hint_x: 7
            on_value: root.setstaircaseSpeed(self.value)


        ##################
	##### LABELS #####
        ##################

        Label:
            id: title
            text: 'Perpetual Motion Machine'
            font_size: 55
            bold: True
            center_x: root.width * 0.5
            halign: 'center'
            y: root.height * 0.75
            color: 255/255, 102/255, 102/255, 1

        Label:
            id: rampSpeedLabel
            text: 'Ramp Speed: ' + str(rampSpeed.value)
            font_size: 40
            center_x: root.width * 0.22
            y: root.height * 0.15
            color: 0.8, 0.8, 0.8, 1

        Label:
            id: staircaseSpeedLabel
            text: 'Staircase Speed: ' + str(staircaseSpeed.value)
            font_size: 40
            center_x: root.width * 0.20
            y: root.height * 0.05
            color: 0.8, 0.8, 0.8, 1

        Label:
            id: armControlLabel
            text: 'Firmware Version: ' + str(root.version)
            font_size: 20
            center_x: root.width * 0.9
            y: root.height * 0.02
            color: 0.8, 0.8, 0.8, 1

